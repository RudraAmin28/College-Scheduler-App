<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editClassworkTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Classwork Title"
        android:layout_marginBottom="8dp"/>

    <Spinner
        android:id="@+id/spinnerEditClassworkType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select Classwork Type"
        android:layout_marginBottom="8dp"
        android:entries="@array/classwork_types"/>

    <Spinner
        android:id="@+id/spinnerEditClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:hint="Select Class" />


    <EditText
        android:id="@+id/editClassworkLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Classwork Location"
        android:layout_marginBottom="8dp"/>

    <DatePicker
        android:id="@+id/datePickerEditDueDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/buttonUpdateClasswork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Update" />

        <Button
            android:id="@+id/buttonCancelEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>
</LinearLayout>