<!-- res/layout/popup_edit_classwork.xml -->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Name input field -->
    <EditText
        android:id="@+id/editClassworkTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Classwork Title"
        android:layout_marginBottom="8dp"/>

    <!-- Type of classwork dropdown -->
    <Spinner
        android:id="@+id/spinnerEditClassworkType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select Classwork Type"
        android:layout_marginBottom="8dp"
        android:entries="@array/classwork_types"/>

    <!-- Class dropdown -->
    <Spinner
        android:id="@+id/spinnerEditClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:hint="Select Class"
        android:entries="@array/class_types"/>

    <!-- Due date calendar -->
    <DatePicker
        android:id="@+id/datePickerEditDueDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"/>

    <!-- Buttons -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Update button -->
        <Button
            android:id="@+id/buttonUpdateClasswork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Update Classwork" />

        <!-- Cancel button -->
        <Button
            android:id="@+id/buttonCancelEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>
</LinearLayout>