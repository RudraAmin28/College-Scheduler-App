<!-- res/layout/classwork_item_layout.xml -->

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ClassworkConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CheckBox
            android:id="@+id/checkBoxClasswork"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/classworkDetails"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/classworkDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:gravity="start"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/checkBoxClasswork"
            app:layout_constraintEnd_toStartOf="@+id/editClasswork">

            <!-- Display the classwork title -->
            <TextView
                android:id="@+id/textViewClassworkTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Placeholder title"
                android:textStyle="bold"
                android:textSize="18sp" />

            <!-- Display the classwork type -->
            <TextView
                android:id="@+id/textViewClassworkType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Placeholder type"
                android:layout_marginTop="8dp" />

            <!-- Display the associated class -->
            <TextView
                android:id="@+id/textViewClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Placeholder class"
                android:layout_marginTop="8dp" />

            <!-- Display the due date -->
            <TextView
                android:id="@+id/textViewDueDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Placeholder due date"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <Button
            android:id="@+id/editClasswork"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@android:drawable/ic_menu_edit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/deleteClasswork"
            app:layout_constraintStart_toEndOf="@+id/classworkDetails"/>

        <Button
            android:id="@+id/deleteClasswork"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp"
            android:background="@android:drawable/ic_delete"
            android:backgroundTint="#FF0000"
            android:textColor="#FF0000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>