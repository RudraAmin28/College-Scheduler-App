<!-- res/layout/popup_add_classwork.xml -->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Name input field -->
    <EditText
        android:id="@+id/editClassworkTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Classwork Title"
        android:layout_marginBottom="8dp"/>

    <!-- Type of classwork dropdown -->
    <Spinner
        android:id="@+id/spinnerClassworkType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select Classwork Type"
        android:layout_marginBottom="8dp"
        android:entries="@array/classwork_types"/>

    <Spinner
        android:id="@+id/spinnerClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select Class"
        android:layout_marginBottom="8dp" />
    <!-- Class dropdown -->

    <EditText
        android:id="@+id/editClassworkLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Classwork Location"
        android:layout_marginBottom="8dp"/>

    <!-- Due date calendar -->
    <DatePicker
        android:id="@+id/datePickerDueDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"/>
    <!-- Buttons -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Add button -->
        <Button
            android:id="@+id/buttonAddClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Add Classwork" />

        <!-- Cancel button -->
        <Button
            android:id="@+id/buttonCancelClasswork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>
</LinearLayout>
